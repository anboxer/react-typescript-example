{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowJs": false,
    "jsx": "react",
    "strict": false,
    "alwaysStrict": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "lib": [
      "dom",
      "es5",
      "es6",
      "esnext",
      "es2015"
    ],
    "types": [
      "node"
    ]
  }
}